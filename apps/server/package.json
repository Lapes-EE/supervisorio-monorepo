{
  "name": "@repo/server",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm env:load tsx watch src/server.ts",
    "start": "pnpm env:load tsx src/server.ts",
    "env:load": "dotenv -e ../../.env --",
    "pretest": "dotenv -e .env.test.local npx drizzle-kit migrate",
    "test": "dotenv -e .env.test.local vitest run --coverage",
    "build": "tsup src/server.ts && tsc",
    "db:generate": "pnpm env:load drizzle-kit generate",
    "db:migrate": "pnpm env:load drizzle-kit migrate",
    "db:studio": "pnpm env:load drizzle-kit studio"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@repo/env": "workspace:*",
    "@scalar/fastify-api-reference": "^1.34.2",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.2",
    "is-ip": "^5.0.1",
    "node-cron": "^4.2.1",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "postgres": "^3.4.7",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^24.0.15",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  }
}
